                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" Height="25" Width="32" Margin="75,0,0,0" FontWeight="Bold"><Run Language="pl-pl" Text="X"/><Run Text=":"/></TextBlock>
                    <TextBox x:Name="mariginO_X_Tb" TextWrapping="Wrap" Text="0" Width="66" TextAlignment="Center" Height="25" TextChanged="TextBox_TextChanged" PreviewTextInput="NumberTB_PreviewTextInput" GotFocus="TextBox_GotFocus" 
         LostFocus="TextBox_LostFocus"/>
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" Height="25" Width="32"><Run FontWeight="Bold" Language="pl-pl" Text="Y:"/></TextBlock>
                    <TextBox x:Name="mariginO_Y_Tb" TextWrapping="Wrap" Text="0" Width="66" TextAlignment="Center" Height="25" TextChanged="TextBox_TextChanged" PreviewTextInput="NumberTB_PreviewTextInput" GotFocus="TextBox_GotFocus" 
         LostFocus="TextBox_LostFocus"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Left">
                    <TextBlock Height="25" TextWrapping="Wrap" Width="333" TextAlignment="Center"><Run FontWeight="Bold" Text="Szerokość marginesów "/><Run FontWeight="Bold" Language="pl-pl" Text="w"/><Run FontWeight="Bold" Text="ewnętrznych:"/></TextBlock>
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" Height="25" Width="32" Margin="75,0,0,0"><Run FontWeight="Bold" Language="pl-pl" Text="X:"/></TextBlock>
                    <TextBox x:Name="mariginI_X_Tb" TextWrapping="Wrap" Text="0" Width="66" TextAlignment="Center" Height="25" TextChanged="TextBox_TextChanged" PreviewTextInput="NumberTB_PreviewTextInput" GotFocus="TextBox_GotFocus" 
         LostFocus="TextBox_LostFocus"/>
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" Height="25" Width="32"><Run FontWeight="Bold" Language="pl-pl" Text="Y:"/></TextBlock>
                    <TextBox x:Name="mariginI_Y_Tb" TextWrapping="Wrap" Text="0" Width="66" TextAlignment="Center" Height="25" TextChanged="TextBox_TextChanged" PreviewTextInput="NumberTB_PreviewTextInput" GotFocus="TextBox_GotFocus" 
         LostFocus="TextBox_LostFocus"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Left">
                    <TextBlock Height="25" TextWrapping="Wrap" Width="333" TextAlignment="Center"><Run FontWeight="Bold" Language="pl-pl" Text="Wymiary pojedynczej etykiety:"/></TextBlock>
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" Height="25" Width="32" Margin="75,0,0,0"><Run FontWeight="Bold" Language="pl-pl" Text="X:"/></TextBlock>
                    <TextBox x:Name="label_size_X_Tb" TextWrapping="Wrap" Text="0" Width="66" TextAlignment="Center" Height="25" PreviewTextInput="NumberTB_PreviewTextInput"/>
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" Height="25" Width="32"><Run FontWeight="Bold" Language="pl-pl" Text="Y:"/></TextBlock>
                    <TextBox x:Name="label_size_Y_Tb" TextWrapping="Wrap" Text="0" Width="66" TextAlignment="Center" Height="25" PreviewTextInput="NumberTB_PreviewTextInput"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" Width="738">
                    <TextBlock Height="25" TextWrapping="Wrap" Width="333" TextAlignment="Center"><Run FontWeight="Bold" Text="W"/><Run FontWeight="Bold" Language="pl-pl" Text="pis nazwę szablonu"/><Run FontWeight="Bold" Text=":"/></TextBlock>
                    <TextBox x:Name="label_name_Tb" TextWrapping="Wrap" Text="nazwa" Width="120" TextAlignment="Center" Margin="127,0,0,0" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="addtemplBtn" Content="Dodaj szablon" Width="160" Height="44" Foreground="Black" FontSize="16" Click="addtemplBtn_Click" FontWeight="Bold">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" CornerRadius="20" BorderThickness="2" BorderBrush="White">
                                                <Border.Background>
                                                    <LinearGradientBrush>
                                                        <GradientStop Color="DarkGray" Offset="0"/>
                                                        <GradientStop Color="WhiteSmoke" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <!-- Przyciemnianie po najechaniu myszką -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush>
                                                                <GradientStop Color="Gray" Offset="0"/>
                                                                <GradientStop Color="DarkGray" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="previewtemplBtn" Content="Podgląd szablonu" Width="160" Height="44" Foreground="Black" FontSize="16" Click="previewtemplBtn_Click" FontWeight="Bold" Margin="75,0,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" CornerRadius="20" BorderThickness="2" BorderBrush="White">
                                                <Border.Background>
                                                    <LinearGradientBrush>
                                                        <GradientStop Color="DarkGray" Offset="0"/>
                                                        <GradientStop Color="WhiteSmoke" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <!-- Przyciemnianie po najechaniu myszką -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush>
                                                                <GradientStop Color="Gray" Offset="0"/>
                                                                <GradientStop Color="DarkGray" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                   
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid x:Name="HistoryGrid" HorizontalAlignment="Left" Height="347" Margin="150,70,0,0" VerticalAlignment="Top" Width="750" Visibility="Collapsed">
            <Rectangle HorizontalAlignment="Center" Height="347" VerticalAlignment="Center" Width="750" Fill="White" Visibility="Collapsed"/>
            <TextBlock HorizontalAlignment="Left" Height="22" Margin="100,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148"><Run FontWeight="Bold" Language="pl-pl" Text="Import kodów"/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Height="22" Margin="100,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148"><Run FontWeight="Bold" Language="pl-pl" Text="Historia"/><Run FontWeight="Bold" Text=" kodów"/></TextBlock>
            <ListBox x:Name="history_LB" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="322,105,221,24" SelectionChanged="history_LB_SelectionChanged"/>
            <Button x:Name="LoadFileButton" Content="Otwórz" Click="LoadFileButton_Click" HorizontalAlignment="Center" Height="31" Margin="0,45,-90,0" VerticalAlignment="Top" Width="106" BorderBrush="{x:Null}" FontWeight="Bold" FontSize="14">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" CornerRadius="5" BorderThickness="1" BorderBrush="Black">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="Black" Offset="1"/>
                                                <GradientStop Color="White" Offset="0"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <!-- Rozjaśnianie po najechaniu myszką -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="Gray" Offset="1"/>
                                                        <GradientStop Color="WhiteSmoke" Offset="0"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                </Button>

        </Grid>
        <Grid x:Name="FootNoteGrid" HorizontalAlignment="Left" Height="33" Margin="145,517,0,0" VerticalAlignment="Top" Width="755">
            <Image Source="/icons/copyright-line.png" Margin="588,4,145,10">
                <Image.OpacityMask>
                    <ImageBrush ImageSource="/copyright-line.png"/>
                </Image.OpacityMask>
            </Image>
            <TextBlock HorizontalAlignment="Right" Height="18" Margin="77,-7,0,-1" TextWrapping="Wrap" VerticalAlignment="Center" Width="143"><Run Language="pl-pl" Text="Marcel Chrapkowski"/></TextBlock>
        </Grid>
        <Grid x:Name="Exit" HorizontalAlignment="Left" Height="46" Margin="0,466,0,0" VerticalAlignment="Top" Width="145">
            <StackPanel Height="46" Width="125">
                <Button x:Name="MainExit" Tag="/logout-box-line.png" Width="35" Height="35" BorderBrush="{x:Null}" Click="MainExitButton_Click" Style="{StaticResource HoverButtonStyle}">
                    <Button.Background>
                        <ImageBrush ImageSource="/logout-box-line.png"/>
                    </Button.Background>
                </Button>
            </StackPanel>
        </Grid>
        <Grid x:Name="Generate_Grid_" HorizontalAlignment="Left" Height="85" Margin="150,427,0,0" VerticalAlignment="Top" Width="742" RenderTransformOrigin="0.5,0.5">
            <Rectangle Height="90" Margin="10,0,0,0" Fill="White"/>
            <StackPanel>
                <Button x:Name="GenerateBtn" Content="Generuj" Click="GenerateBtn_Click"
        Width="142" Height="44" Foreground="Black" FontSize="16"
        Margin="0,20,0,0" FontWeight="Bold">

                    <!-- Styl przycisku -->
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Cursor" Value="Hand" />
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="20" BorderThickness="2" BorderBrush="{x:Null}">
                                            <Border.Background>
                                                <RadialGradientBrush x:Name="ButtonBackground">
                                                    <GradientStop x:Name="Stop1" Color="Black" Offset="1"/>
                                                    <GradientStop x:Name="Stop2" Color="White" Offset="0"/>
                                                </RadialGradientBrush>
                                            </Border.Background>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Definicja animacji -->
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <!-- Animacja rozjaśniania pierwszego stopu -->
                                                            <ColorAnimation Storyboard.TargetName="Stop1" 
                                                            Storyboard.TargetProperty="Color" 
                                                            To="Gray" Duration="0:0:0.3"/>
                                                            <!-- Animacja rozjaśniania drugiego stopu -->
                                                            <ColorAnimation Storyboard.TargetName="Stop2" 
                                                            Storyboard.TargetProperty="Color" 
                                                            To="WhiteSmoke" Duration="0:0:0.3"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>

                                                <!-- Powrót do ciemniejszego koloru po opuszczeniu -->
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetName="Stop1" 
                                                            Storyboard.TargetProperty="Color" 
                                                            To="Black" Duration="0:0:0.3"/>
                                                            <ColorAnimation Storyboard.TargetName="Stop2" 
                                                            Storyboard.TargetProperty="Color" 
                                                            To="White" Duration="0:0:0.3"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Grid>
        <Grid x:Name="Generate_Settings_Grid" HorizontalAlignment="Left" Height="352" Margin="525,70,0,0" VerticalAlignment="Top" Width="375">
            <Rectangle HorizontalAlignment="Center" Height="352" VerticalAlignment="Center" Width="355" Fill="White"/>
            <StackPanel x:Name="___GenerateSP_" HorizontalAlignment="Center" Height="330" VerticalAlignment="Center" Width="355">
                <StackPanel Height="82" Width="355">
                    <TextBlock Height="36" TextWrapping="Wrap" Width="148" Margin="0,6,0,0" HorizontalAlignment="Center"><Run FontWeight="Bold" Text="Wybierz szablon etykiety"/></TextBlock>
                    <ComboBox x:Name="labeltmplCB" Width="200" BorderBrush="#FFACACAC" Background="White" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Height="30" SelectionChanged="LabelTmplCB_SelectionChanged">
                        
                    </ComboBox>
                </StackPanel>
                <StackPanel x:Name="GenNumSP" Height="67" Width="355" Margin="0,25,0,0">
                    <TextBlock Height="23" TextWrapping="Wrap" Width="225" Margin="0,6,0,0" HorizontalAlignment="Center"><Run FontWeight="Bold" Text="Wpisz liczbę etykiet do wygenerowania"/></TextBlock>
                    <TextBox x:Name="NumberTB" TextWrapping="Wrap" Text="1" Width="72" BorderBrush="Black" TextAlignment="Center" PreviewTextInput="NumberTB_PreviewTextInput" Height="21" HorizontalAlignment="Center" Margin="0,5,0,0" GotFocus="TextBox_GotFocus" 
         LostFocus="TextBox_LostFocus"/>
                </StackPanel>
                <StackPanel Height="81" Width="355" Margin="0,25,0,0">
                    <TextBlock Height="36" TextWrapping="Wrap" Width="148" Margin="0,6,0,0"><Run FontWeight="Bold" Text="Wybierz format kodu"/></TextBlock>
                    <ComboBox x:Name="barcodeTypeCB" Width="200" Height="30" SelectionChanged="BarcodeTypeCB_SelectionChanged" HorizontalContentAlignment="Center">
                       
                    </ComboBox>

                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid x:Name="HomeGrid" HorizontalAlignment="Left" Height="352" Margin="150,70,0,0" VerticalAlignment="Top" Width="370">
            <Rectangle HorizontalAlignment="Center" Height="352" VerticalAlignment="Center" Width="370" Fill="White"/>
            <StackPanel HorizontalAlignment="Center" Height="350" VerticalAlignment="Center" Width="350">
                <TextBlock Height="22" TextWrapping="Wrap" Width="103" HorizontalAlignment="Center"><Run FontWeight="Bold" Text="Podgląd etykiety"/></TextBlock>
                <Grid Height="168" Width="119" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>