 <Window x:Class="BarcodeGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarcodeGenerator"
        mc:Ignorable="d"
        MouseDown="Window_MouseDown"
        Title="MainWindow" Height="550" Width="900" Background="{x:Null}" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="HoverButtonStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect/>
                </Setter.Value>
            </Setter>
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" BorderThickness="1" BorderBrush="Transparent">
                            <Border.Background>
                                <ImageBrush x:Name="ButtonImage" ImageSource="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"/>
                            </Border.Background>
                        </Border>

                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.6" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

        <Grid x:Name="Main_Grid_">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup"/>
        </VisualStateManager.VisualStateGroups>
        <Rectangle x:Name="MainGrid_Rectangle_" Stroke="Black" Fill="White" RadiusX="24.54" RadiusY="24.54"/>
        <StackPanel x:Name="Left_StackPanel_" HorizontalAlignment="Left" Height="550" VerticalAlignment="Center" Width="145">
            <Grid x:Name="Logo_" Height="45" Margin="0,20,0,0" Width="146">
                <TextBlock TextAlignment="Center"  Margin="10,2,0,0" TextWrapping="Wrap" FontWeight="Bold" FontSize="30"><Run Language="pl-pl" Text="MCH"/></TextBlock>
            </Grid>
            <Grid x:Name="HomeBtn_Grid_" Height="45" Margin="0,40,0,0" Width="146">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="53*"/>
                    <ColumnDefinition Width="93*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2">
                    <Button x:Name="Home" Tag="/home-2-line.png" Margin="58,0,0,0" Width="35" Height="35" BorderBrush="{x:Null}" Click="HomeButton_Click" Style="{StaticResource HoverButtonStyle}">
                        <Button.Background>
                            <ImageBrush ImageSource="/home-2-line.png"/>
                        </Button.Background>
                    </Button>


                </StackPanel>

            </Grid>
            <Grid x:Name="Manual_Grid_" Height="45" Width="146" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="Manual" Tag="/Barcode.png" Margin="58,0,0,0" Width="35" Height="35" BorderBrush="{x:Null}" Click="ManualButton_Click" Style="{StaticResource HoverButtonStyle}">
                        <Button.Background>
                            <ImageBrush ImageSource="/Barcode.png"/>
                        </Button.Background>
                    </Button>
                </StackPanel>

            </Grid>
            <Grid x:Name="HistoryBtn_Grid__" Height="45" Width="146" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="History" Tag="/calendar-check-line.png" Margin="58,0,0,0" Width="35" Height="35" BorderBrush="{x:Null}" Click="HistoryButton_Click" Style="{StaticResource HoverButtonStyle}">
                        <Button.Background>
                            <ImageBrush ImageSource="/calendar-check-line.png"/>
                        </Button.Background>
                    </Button>
                </StackPanel>

            </Grid>
            <Grid x:Name="SettingsBtn_Grid_" Height="45" Width="146" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="Settings" Tag="/settings-line.png" Margin="58,0,0,0" Width="35" Height="35" BorderBrush="{x:Null}" Click="SettingsButton_Click" Style="{StaticResource HoverButtonStyle}">
                        <Button.Background>
                            <ImageBrush ImageSource="/settings-line.png"/>
                        </Button.Background>
                    </Button>
                </StackPanel>

            </Grid>
        </StackPanel>
        <Grid x:Name="Title_Grid" Margin="150,20,0,485">
