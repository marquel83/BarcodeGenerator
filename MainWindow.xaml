                    <TextBox x:Name="no_labels_Tb" TextWrapping="Wrap" Text="0" Width="66" TextAlignment="Center" Height="25" TextChanged="TextBox_TextChanged" PreviewTextInput="NumberTB_PreviewTextInput" GotFocus="TextBox_GotFocus" 
         LostFocus="TextBox_LostFocus"/>
                    <TextBlock Height="25" TextWrapping="Wrap" Width="236" TextAlignment="Center"><Run FontWeight="Bold" Text="Liczba kolun na stronie:"/></TextBlock>
                    <TextBox x:Name="no_column_Tb" TextWrapping="Wrap" Text="0" Width="66" TextAlignment="Center" Height="25" TextChanged="TextBox_TextChanged" PreviewTextInput="NumberTB_PreviewTextInput" GotFocus="TextBox_GotFocus" 
