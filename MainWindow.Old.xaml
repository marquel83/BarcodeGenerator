<Window x:Class="BarcodeGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generator Kodów Kreskowych" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu boczne -->
        <StackPanel Background="#2c3e50">
            <RadioButton Style="{StaticResource MenuButtonStyle}" IsChecked="True" Checked="GenerateTab_Checked">
                <RadioButton.OpacityMask>
                    <ImageBrush ImageSource="/9069383_home_two_icon.png"/>
                </RadioButton.OpacityMask>
                <RadioButton.Background>
                    <ImageBrush ImageSource="/9069383_home_two_icon.png"/>
                </RadioButton.Background>
            </RadioButton>
            <RadioButton Style="{StaticResource MenuButtonStyle}" Checked="ManualTab_Checked">
                <RadioButton.Background>
                    <ImageBrush ImageSource="/9069780_write_icon.png"/>
                </RadioButton.Background>
                <RadioButton.OpacityMask>
                    <ImageBrush ImageSource="/9069780_write_icon.png"/>
                </RadioButton.OpacityMask>
            </RadioButton>
            <RadioButton Style="{StaticResource MenuButtonStyle}" Checked="SettingsTab_Checked">
                <RadioButton.Background>
                    <ImageBrush ImageSource="/9069015_folder_settings_icon.png"/>
                </RadioButton.Background>
                <RadioButton.BorderBrush>
                    <ImageBrush ImageSource="/9069015_folder_settings_icon.png"/>
                </RadioButton.BorderBrush>
            </RadioButton>
        </StackPanel>

        <!-- Obszar treści -->
        <Grid Grid.Column="1" Margin="20">
            <!-- Zakładka Generowanie -->
            <Grid x:Name="GenerateTab" Visibility="Visible">
                <StackPanel>
                    <TextBlock FontSize="24" Margin="0,0,0,20" Text="Generator Kodów Kreskowych" HorizontalAlignment="Center"/>
                    <ComboBox x:Name="BarcodeTypeCombo" Width="200"
                              SelectedIndex="0" HorizontalAlignment="Center">
                        <ComboBoxItem Content="EAN-13"/>
                        <ComboBoxItem Content="Code 128"/>
                    </ComboBox>
                </StackPanel>
            </Grid>

            <!-- Zakładka Ręczne Wprowadzanie -->
            <Grid x:Name="ManualTab" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Ręczne Wprowadzanie Kodów" FontSize="24" Margin="0,0,0,20"/>
                    <ComboBox x:Name="ManualLabelTypeCombo" Width="200" HorizontalAlignment="Left" Margin="0,0,0,20"/>
                    <TextBox x:Name="ManualCodesTextBox" Height="200" TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto" Margin="0,0,0,20"/>
                    <Button Content="Generuj Etykiety" Width="200" HorizontalAlignment="Left"
                            Click="GenerateManualBarcodes_Click"/>
                </StackPanel>
            </Grid>

            <!-- Zakładka Ustawienia -->
            <Grid x:Name="SettingsTab" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Ustawienia i Import Kodów" FontSize="24" Margin= "10"/>
                    <!-- Import kodów -->
                    <Button Content ="Importuj kody!" />
                </StackPanel>
            </Grid>
            <Button Content="Generuj Kody" Click="GenerateBarcodes_Click" RenderTransformOrigin="0.625,9.723" Margin="350,252,350,272"/>
            <ComboBox x:Name="LabelTypeCombo" Margin="350,154,350,368"/>
        </Grid>
    </Grid>
</Window>
