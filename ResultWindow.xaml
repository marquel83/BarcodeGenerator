<Window x:Class="BarcodeGenerator.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generated Barcodes" 
        WindowStartupLocation="CenterScreen" MouseDown="Window_MouseDown" Width="Auto" Height="Auto">
    <Window.Resources>

        <Style x:Key="HoverButtonStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect/>
                </Setter.Value>
            </Setter>
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" BorderThickness="1" BorderBrush="Transparent">
                            <Border.Background>
                                <ImageBrush x:Name="ButtonImage" ImageSource="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"/>
                            </Border.Background>
                        </Border>


                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.6" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Grid x:Name="MainGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid x:Name="BarcodesGrid" Grid.Row="0"/>
            </Grid>
            <Grid x:Name="ButtonGrid" Height="94" Width="963">
                <StackPanel Orientation="Horizontal" Height="80" Width="943" HorizontalAlignment="Center" VerticalAlignment="Center">

                    <StackPanel Orientation="Horizontal" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Button x:Name="printBtn" Tag="/printer-line.png"  Width="40" Height="40" Click="Print_Click" Style="{StaticResource HoverButtonStyle}" BorderBrush="{x:Null}" Margin="33,0,0,0">
                            <Button.Background>
                                <ImageBrush ImageSource="/printer-line.png" Stretch="Fill"/>
                            </Button.Background>
                        </Button>
                        <Button x:Name="saveBtn" Tag="/Group 7.png" Width="40" Height="40" Click="SavePdf_Click" Style="{StaticResource HoverButtonStyle}" BorderBrush="{x:Null}" Margin="27,0,0,0">
                            <Button.Background>
                                <ImageBrush ImageSource="/Group 7.png"/>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="230,0,0,0">
                        <Button x:Name="previouspageBtn" Tag="/Arrow_left@3x.png" Width="44" Height="25" BorderBrush="{x:Null}" Style="{StaticResource HoverButtonStyle}">
                            <Button.Background>
                                <ImageBrush ImageSource="/Arrow_left@3x.png" Stretch="UniformToFill"/>
                            </Button.Background>
                        </Button>
                        <Button x:Name="nextpageBtn" Tag="/Arrow_right@3x.png"  Width="44" Height="25" BorderBrush="{x:Null}" Style="{StaticResource HoverButtonStyle}" Margin="62,0,0,0">
                            <Button.Background>
                                <ImageBrush ImageSource="/Arrow_right@3x.png" Stretch="UniformToFill"/>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="150" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="196,0,0,0">
                        <Button x:Name="exitBtn" Tag="/logout-box-line.png" Width="40" Height="40" Click="PreviewExitButton_Click" Style="{StaticResource HoverButtonStyle}" BorderBrush="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="55,0,0,0">
                            <Button.Background>
                                <ImageBrush ImageSource="/logout-box-line.png"/>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>