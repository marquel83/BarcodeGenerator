<Window x:Class="BarcodeGenerator.BarcodePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Podgląd Kodów Kreskowych" Height="600" Width="800">
    <DockPanel>
        <!-- Przyciski akcji na dole okna -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="10">
            <Button x:Name="printBtn" Content="" Width="40" Margin="5,5,20,5" Click="Print_Click" Height="40">
                <Button.Background>
                    <ImageBrush ImageSource="/printer-line.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="saveBtn" Content="" Width="40" Click="SavePdf_Click" Height="40">
                <Button.Background>
                    <ImageBrush ImageSource="/Group 7.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="exitBtn" Content="" Width="40" Click="PreviewExitButton_Click" Height="40" Margin="630,0,0,0">
                <Button.Background>
                    <ImageBrush ImageSource="/logout-box-line.png"/>
                </Button.Background>
            </Button>
        </StackPanel>

        <!-- Tabela z kodami kreskowymi -->
        <DataGrid x:Name="BarcodesGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  RowHeight="100"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Center"
                  GridLinesVisibility="All">
            <!-- Kolumny będą generowane dynamicznie w kodzie C# -->
        </DataGrid>
    </DockPanel>
</Window>
